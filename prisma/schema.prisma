// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  password      String?
  name          String
  username      String?  @unique
  bio           String?
  avatar        String?
  learningStyle String?
  studyHours    Int?
  goals         String?
  interests     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  profile       Profile?
  habits        Habit[]
  emotions      Emotion[]
  enrollments   Enrollment[]
  posts         Post[]
  comments      Comment[]
  reactions     Reaction[]
  studyBuddies  StudyBuddy[] @relation("UserBuddies")
  buddyRequests StudyBuddy[] @relation("RequestedBuddies")
  notifications Notification[]
  badges        Badge[]
  streaks       Streak[]
  mistakes      Mistake[]
  notes         Note[]
}

model Profile {
  id        String   @id @default(cuid())
  userId    String   @unique
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  bio       String?
  avatar    String?
  settings  String?  // JSON string for settings
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Habit {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title       String
  description String?
  type        String   // 'daily', 'weekly', 'custom'
  difficulty  String?  // 'easy', 'medium', 'hard'
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  completions HabitCompletion[]
  streaks    Streak[]
}

model HabitCompletion {
  id        String   @id @default(cuid())
  habitId   String
  habit     Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  completedAt DateTime @default(now())
  notes     String?
}

model Emotion {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mood      String   // 'energetic', 'calm', 'stressed', 'focused', 'tired', 'excited'
  intensity Int      // 1-10
  notes     String?
  createdAt DateTime @default(now())
}

model Course {
  id          String   @id @default(cuid())
  title       String
  tagline     String?
  description String
  category    String
  difficulty  String   // 'beginner', 'intermediate', 'advanced'
  duration    Int      // in minutes
  lessonCount Int      @default(0)
  instructor  String?
  image       String?
  moodFit     String?  // JSON array of compatible moods
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  lessons     Lesson[]
  enrollments Enrollment[]
}

model Lesson {
  id          String   @id @default(cuid())
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title       String
  content     String?  // JSON or text content
  videoUrl    String?
  order       Int
  duration    Int      // in minutes
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  progress    LessonProgress[]
  notes       Note[]
}

model Enrollment {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  courseId  String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  progress  Float    @default(0) // 0-100
  enrolledAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
}

model LessonProgress {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  completed Boolean  @default(false)
  progress  Float    @default(0) // 0-100
  completedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, lessonId])
}

model Post {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String?
  content   String
  type      String   // 'question', 'note', 'win', 'discussion'
  courseId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  comments  Comment[]
  reactions Reaction[]
}

model Comment {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  content   String
  parentId  String?  // For nested replies
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reaction {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  postId    String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  type      String   // 'like', 'love', 'celebrate', 'support'
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model StudyBuddy {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation("UserBuddies", fields: [userId], references: [id], onDelete: Cascade)
  buddyId     String
  buddy       User     @relation("RequestedBuddies", fields: [buddyId], references: [id], onDelete: Cascade)
  status      String   // 'pending', 'accepted', 'rejected'
  compatibility Float?  // 0-100
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, buddyId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // 'habit', 'course', 'community', 'streak', 'buddy'
  title     String
  message   String
  link      String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Badge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // 'streak', 'course', 'habit', 'community'
  name      String
  icon      String?
  earnedAt  DateTime @default(now())
}

model Streak {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  habitId   String?
  habit     Habit?   @relation(fields: [habitId], references: [id], onDelete: Cascade)
  type      String   // 'daily', 'habit', 'course', 'buddy'
  count     Int      @default(1)
  lastDate  DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Mistake {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lessonId  String?
  type      String   // 'concept', 'calculation', 'application'
  content   String
  pattern   String?  // For clustering similar mistakes
  createdAt DateTime @default(now())
}

model Note {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lessonId  String
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  summary   String?
  keyPoints String?  // JSON array
  actionTasks String? // JSON array
  content   String   // Full note content
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, lessonId], name: "userId_lessonId")
}

